<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Color de fondo del borde -->
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Color del borde -->
            <corners android:radius="2000dp" /> <!-- Radio de esquina para hacerlo redondeado -->
        </shape>
    </item>
    <item android:right="10dp" android:left="10dp" android:top="10dp" android:bottom="10dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo del contenido -->
            <corners android:radius="2000dp" /> <!-- Radio de esquina para hacerlo redondeado -->
        </shape>
    </item>
</layer-list>